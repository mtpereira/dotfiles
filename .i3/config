for_window [class="Signal"] move to workspace number $ws_comm, focus
for_window [class="Code"] move to workspace number $ws_code, focus
for_window [class="jetbrains-idea-ce"] move to workspace number $ws_code, focus
for_window [class="Slack"] move to workspace number $ws_comm, focus
for_window [class="zoom"] move to workspace number $ws_comm, focus
for_window [class="Spotify"] move to workspace number $ws_music, focus

